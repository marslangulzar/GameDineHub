            </div>
            <div class="modal-body">
                <div class="row" id="assignRoleDiv">
                    <!-- Ajax content Here ;) -->
                </div>
            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Cancel
