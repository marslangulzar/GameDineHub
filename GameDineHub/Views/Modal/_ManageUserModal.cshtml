@using BusinessEntities.Enums;

<div class="modal fade" id="manageUsersModal" tabindex="-1" data-backdrop="static" role="dialog" aria-modal="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary-900 p-2">
                <h4 class="modal-title text-white">
                    <span aria-hidden="true"><i class="fal fa-user mr-2"></i></span> User
                    <small class="m-0 text-muted">

                    </small>
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div id="loader_provider" class="d-none">
                    <div class="fs-xl color-danger-300 mb-1"><i class="fal fa-cog fa-spin mr-1"></i>Loading please wait...</div>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-primary-500 progress-bar-animated" role="progressbar" style="width: 100%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <form id="formManageUserRoles" class="needs-validation" novalidate>
                    <input type="hidden" id="UserId" name="UserId" value="0" />
                    <input type="hidden" id="fk_AddressID" name="fk_AddressID" value="0" />
                    <input type="hidden" id="fk_UserAddressID" name="fk_UserAddressID" value="0" />
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label class="form-label" for="UserRole">User Role<span class="text-danger"> *</span></label>
                            <select class="form-control form-control-sm form-select fs-md" id="UserRole" name="UserRole" required>
                                <option value="" selected="">- Please Select -</option>
                                <option value="1">Admin</option>
                                <option value="2">User</option>
                            </select>
                        </div>
                        <div class="col-lg-4 form-group">
                            <div class="custom-control custom-checkbox mt-5">
                                <input type="checkbox" class="custom-control-input" id="cbActive" checked="">
                                <label class="custom-control-label" for="cbActive">Is Active?</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label class="form-label" for="FirstName">First Name<span class="text-danger"> *</span></label>
                            <input type="text" class="form-control form-control-sm fs-md" id="FirstName" name="FirstName" required />
                        </div>
                        <div class="col-lg-4 form-group">
                            <label class="form-label" for="LastName">Last Name<span class="text-danger"> *</span></label>
                            <input type="text" class="form-control form-control-sm fs-md" id="LastName" required name="LastName">
                        </div>
                        <div class="col-lg-4 form-group">
                            <label class="form-label" for="gender">Gender</label>
                            <select class="form-control form-control-sm fs-md" id="fk_GenderID" name="fk_GenderID">
                                <option value="" selected="">- Please Select -</option>
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                                <option value="3">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label class="form-label" for="Email">Email<span class="text-danger"> *</span></label>
                            <input type="email" class="form-control form-control-sm fs-md" id="Email" name="Email" required />
                        </div>
                        <div class="col-lg-4 form-group">
                            <label class="form-label" for="MobileNo">Mobile Number</label>
                            <input type="text" class="form-control form-control-sm fs-md" id="MobileNo" name="MobileNo" im-insert="true" data-inputmask="'mask': '(999) 999-9999'">
                        </div>
                        <div class="col-lg-4 form-group">
                            <label class="form-label" for="PhoneNo">Phone Number</label>
                            <input type="text" class="form-control form-control-sm fs-md" id="PhoneNo" name="PhoneNo" im-insert="true" data-inputmask="'mask': '(999) 999-9999'">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCloseUserModal" class="btn btn-sm btn-danger" data-dismiss="modal"><span class="fal fa-times mr-1"></span>Close</button>
                <button type="button" id="btnSaveUser" class="btn btn-sm btn-success"><span class="fal fa-save mr-1"></span>Create</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Assets/js/formplugins/inputmask/inputmask.bundle.js"></script>
<script>
    $(document).ready(function () {
        $(":input").inputmask();

    });
    let $dataForm = $('#formManageUserRoles');
    $(document).off('click', "#btnSaveUser").on('click', "#btnSaveUser", function (e) {
        if (ilms.validateForm($dataForm)) {
            let requestParam = ilms.getFormData($('#formManageUserRoles'));
            requestParam.UserRoles = [];
            requestParam.UserRoles[0] = {
                RoleID: $('#UserRole').val()
            }

            requestParam["Active"] = $('#cbActive').is(":checked");
            ilms.ajaxPostCall(ilms.routers.UpsertUser, requestParam, function (data) {
                if (data > 0) {
                    ilms.showAlertWithType("User Created / Updated Successfully.", "success", 3000);
                    // Load the page
                    location.reload();
                } else {
                    ilms.showAlertWithType("Something went wrong! Please contact Support.", "error", 3000);
                }
            });
        }
        else {
            return false;
        }
    });
    
</script>